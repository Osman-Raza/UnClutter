# Supabase (create project at https://supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google OAuth2 & Gmail API (create at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Gemini AI (get key at https://aistudio.google.com/apikey)
GEMINI_API_KEY=

# Groq AI (OpenAI-compatible, get key at https://console.groq.com/keys)
# Used when set; preferred over Gemini if both are set
GROQ_API_KEY=

# Server (optional)
PORT=3001
REDIRECT_URI_BASE=http://localhost:3001
